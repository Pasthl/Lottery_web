<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : '抽奖系统' %></title>
    <!-- 引入样式表 -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/responsive.css">
    
    <!-- 引入 Prism.js 语法高亮 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/line-numbers/prism-line-numbers.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
</head>
<!-- 网站顶部导航栏 -->
<!-- 只在主页显示导航栏 -->
<% if (typeof currentPage !== 'undefined' && currentPage === 'home') { %>
    <header class="top-nav">
        <div class="nav-container">
            <!-- 网站品牌/名称 -->
            <div class="brand">
                <a href="/">无厌伽蓝</a>
            </div>
            
            <!-- 右侧导航链接 -->
            <div class="nav-links">
                <!-- 彩蛋按钮 -->
                <a href="/easter-egg" class="nav-btn easter-egg-btn" title="???"></a>
                
                <!-- 管理员入口 -->
                <a href="/admin" class="nav-btn admin-btn" title="管理员入口"></a>

                <!-- 关于 -->
                <a href="/about" class="nav-btn about-btn" title="关于"></a>
            </div>
        </div>
    </header>
<% } %>
<body>
    <div class="container">
        <!-- 页面主要内容将被插入到这里 -->
        <%- body %>
    </div>
    
    <!-- 引入JavaScript文件 -->
    <script src="/js/main.js"></script>
    
    <!-- Prism.js 语法高亮 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-core.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/line-numbers/prism-line-numbers.min.js"></script>
</body>
</html>